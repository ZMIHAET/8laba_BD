@model MedicationModel

@{
	var exists = Model != null && Model.Id != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " Medication";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<input type="hidden" asp-for="Id"/>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="FormId"></label>
				<input type="text" asp-for="FormId" class="form-control"/>
				<span asp-validation-for="FormId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="DrugTypeId"></label>
				<input type="text" asp-for="DrugTypeId" class="form-control"/>
				<span asp-validation-for="DrugTypeId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Prescription"></label>
				<select asp-for="Prescription" asp-items="@Html.GetNullableBoolSelectList("---НЕ ВЫБРАНО---")" class="form-control"></select>
				<span asp-validation-for="Prescription" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
