@model DeliveryModel

@{
	var exists = Model != null && Model.Id != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " Delivery";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<input type="hidden" asp-for="Id"/>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="MedicineId"></label>
				<input type="text" asp-for="MedicineId" class="form-control"/>
				<span asp-validation-for="MedicineId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="CourierId"></label>
				<input type="text" asp-for="CourierId" class="form-control"/>
				<span asp-validation-for="CourierId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="OrderId"></label>
				<input type="text" asp-for="OrderId" class="form-control"/>
				<span asp-validation-for="OrderId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Date"></label>
				<input type="text" asp-for="Date" class="form-control dateTimePicker"/>
				<span asp-validation-for="Date" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Distance"></label>
				<input type="text" asp-for="Distance" class="form-control"/>
				<span asp-validation-for="Distance" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
