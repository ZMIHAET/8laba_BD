@model MedicineReviewModel

@{
	var exists = Model != null && Model.Id != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " MedicineReview";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<input type="hidden" asp-for="Id"/>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="MedicineId"></label>
				<input type="text" asp-for="MedicineId" class="form-control"/>
				<span asp-validation-for="MedicineId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="CustomerId"></label>
				<input type="text" asp-for="CustomerId" class="form-control"/>
				<span asp-validation-for="CustomerId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Rating"></label>
				<input type="text" asp-for="Rating" class="form-control"/>
				<span asp-validation-for="Rating" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="ReviewText"></label>
				<input type="text" asp-for="ReviewText" class="form-control"/>
				<span asp-validation-for="ReviewText" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="ReviewDate"></label>
				<input type="text" asp-for="ReviewDate" class="form-control dateTimePicker"/>
				<span asp-validation-for="ReviewDate" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
