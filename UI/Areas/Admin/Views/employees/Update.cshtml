@model EmployeeModel

@{
	var exists = Model != null && Model.Id != 0;
	ViewBag.Title = (exists ? "Редактирование" : "Создание") + " Employee";
}

<form asp-action="Update" asp-antiforgery="true" method="post">
	<div class="row">
		<input type="hidden" asp-for="Id"/>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="FullName"></label>
				<input type="text" asp-for="FullName" class="form-control"/>
				<span asp-validation-for="FullName" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="DateOfBirth"></label>
				<input type="text" asp-for="DateOfBirth" class="form-control dateTimePicker"/>
				<span asp-validation-for="DateOfBirth" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Phone"></label>
				<input type="text" asp-for="Phone" class="form-control"/>
				<span asp-validation-for="Phone" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="RoleId"></label>
				<input type="text" asp-for="RoleId" class="form-control"/>
				<span asp-validation-for="RoleId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="HireDate"></label>
				<input type="text" asp-for="HireDate" class="form-control dateTimePicker"/>
				<span asp-validation-for="HireDate" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4 col-sm-6">
			<div class="form-group">
				<label asp-for="Salary"></label>
				<input type="text" asp-for="Salary" class="form-control"/>
				<span asp-validation-for="Salary" class="text-danger"></span>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<button class="btn btn-outline-primary" type="submit">@(exists ? "Сохранить" : "Добавить")</button>
			<a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
		</div>
	</div>
</form>
